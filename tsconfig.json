{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "skipLibCheck": true,
    "rootDir": ".",
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "AppConfig": ["app/config/app-dev.config"],
      "i18n-providers": ["app/locale/i18n-providers.en"]
    }
  },
  "exclude": [
    "node_modules",
    "app/main.aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./app/ngfactory",
    "skipMetadataEmit" : true
  }
}
